{
  "$id": "https://lexipol.com/cordico/organization.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Organization Identity",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "identifier": {
          "type": "string",
          "title": "Identifier",
          "minLength": 3,
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            }
          }
        },
	"email": {
          "type": "string",
          "format": "email",
          "title": "E-Mail",
          "minLength": 3,
	  "ory.sh/kratos": {
            "recovery": {
	      "via":"email"
	    }
	  }  
        },
        "organization": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Organization Name",
              "type": "string"
            },
            "organization_type": {
              "title": "Organization Type",
              "type": "string"
            },
	    "data": {
	      "type":"object",
	      "title":"Organization Data",
	      "additionalProperties":true
	    }
          }
        }
      },
      "required": [
	"identifier",
        "email",
	"organization"
      ],
      "additionalProperties": false
    }
  }
}

