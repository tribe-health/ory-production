{
  "$id": "https://tribehealth.com/presets/kratos/quickstart/identifier-password/identity.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Identity",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "identifier": {
          "type": "string",
          "title": "Identifier",
          "minLength": 3,
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            }
          }
        },
	"email": {
          "type": "string",
          "format": "email",
          "title": "E-Mail",
          "minLength": 3,
	  "ory.sh/kratos": {
            "recovery": {
	      "via":"email"
	    }
	  }  
        },
        "name": {
          "type": "object",
          "properties": {
            "first": {
              "title": "First Name",
              "type": "string"
            },
            "last": {
              "title": "Last Name",
              "type": "string"
            }
          }
        }
      },
      "required": [
	"identifier",
        "email"
      ],
      "additionalProperties": false
    }
  }
}

